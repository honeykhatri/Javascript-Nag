<div class="card">
    <div class="card-header">
        Product List
    </div>
    <div class="card-body">
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{name}}</td>
                    <td>&#8377;{{price}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="/products/edit-product?id={{_id}}"><i class="fa fa-edit"></i></a>
                    </td>
                    <td>
                        <a href="/products/delete-product?id={{_id}}"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>